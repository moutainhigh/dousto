			</list>
		</property>
	</bean>
    <!-- JDBC参数配置 -->
	<context:property-placeholder system-properties-mode="OVERRIDE" ignore-resource-not-found="true"  ignore-unresolvable="true" properties-ref="propertyPlaceholderConfigurer"/>
